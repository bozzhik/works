---
import Button from './HeaderButton.astro'
import Switch from './HeaderSwitch.astro'

export const buttons = {
  avatar: {
    icon: '../../../maks.png',
    size: 's-9 -mt-2 lg:s-7',
    position: 'justify-self-start',
    href: '/contacts/',
    blank: '',
  },
  resume: {
    icon: '../../../resume.png',
    size: 's-6 -mt-[2px] lg:s-5',
    position: 'justify-self-end',
    href: 'https://bozzhik.ru/cv.html',
    blank: '_blank',
  },
}
---

<header class="fixed z-[999] w-screen lg:mt-2 mt-9 pr-4 sm:pr-0">
  <div class="grid items-center grid-cols-3 mx-auto w-[60%] xl:w-[65%] lg:w-[95%]">
    <Button href={buttons.avatar.href} blank={buttons.avatar.blank} icon={buttons.avatar.icon} position={buttons.avatar.position} size={buttons.avatar.size} />
    <Switch />
    <Button href={buttons.resume.href} blank={buttons.resume.blank} icon={buttons.resume.icon} position={buttons.resume.position} size={buttons.resume.size} />
  </div>
</header>
