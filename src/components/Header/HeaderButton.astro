---
interface Props {
  icon: string
  position: string
  size: string
}

const {icon, position, size} = Astro.props as Props
---

<div class=`relative z-10 inline-flex ${position}`>
  <div class="block overflow-hidden transition border-[4px] duration-200 border-transparent rounded-full aspect-square s-[70px] sm:s-[60px] hover:ring-[2px] hover:ring-custom-gray-2">
    <div class="s-full group flex overflow-hidden justify-center items-center bg-custom-dark-1">
      <img class=`group-hover:animate-pulse object-cover ${size}` src={icon} />
    </div>
  </div>
</div>
