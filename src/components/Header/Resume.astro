---
import ResumeIcon from './ResumeIcon.astro'
---

<div class="justify-self-end">
  <div class="flex items-center justify-center rounded-full s-14 sm:s-[48px] bg-custom-dark-1">
    <button class="z-10 w-1/2 text-xl text-white bg-transparent">
      <div class="grid place-items-center">
        <ResumeIcon />
      </div>
    </button>
  </div>
</div>

<style is:global>
  button:hover path {
    transition: all 0.3s ease;
    stroke: white;
  }
</style>
