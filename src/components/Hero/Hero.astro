---
import HeroArrow from './HeroArrow.astro'
import HeroTitle from './HeroTitle.astro'
import TextMono from '../UI/TextMono.astro'

interface Props {
  textmono_content: string
  arrow_exist: boolean
  id_link: string
}

const {textmono_content, id_link, arrow_exist} = Astro.props
const classes = '!h-[100svh] h-[100vh]'
---

<div class={`w-full inset-0 flex flex-col justify-center mx-auto text-center ${classes}`}>
  <HeroTitle />
  <TextMono content={textmono_content} classes="lg:w-4/5 mx-auto leading-[110%] xl:mt-4 mt-6" />
</div>
{arrow_exist ? <HeroArrow {id_link} /> : ''}
