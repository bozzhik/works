<div transition:persist class="fixed inset-0 w-screen h-screen -z-50">
  <canvas class="s-full" id="CANVAS_STARS"></canvas>
</div>

<script>
  // Importing StarFieldCanvas from the GitHub repository: https://github.com/tdous/star-field-canvas
  import {StarFieldCanvas} from '../javascript/star-field-canvas'

  const config = {
    // followContext: this.canvas,
    followMouse: false,
    color: {r: 255, g: 255, b: 255},
    glow: false,
    minV: 2,
    maxV: 5,
    numStars: 400,
    trails: false,
  }

  var sf = new StarFieldCanvas.StarField('CANVAS_STARS', config)

  sf.start()

